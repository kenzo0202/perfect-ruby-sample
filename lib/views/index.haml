!!! #<!DOCTYPE html>を表す
%html
  %head
    %meta(charset = 'utf-8')
      %title Todo Application
      %link(href="/css/bootstrap.min.css" rel="stylesheet" type="text/css")
    %body
      .navbar.navbar-inner
        %a.brand(href='/tasks') Todo Application
        %ul.nav
          %li{class: ('active' unless @status)}
            %a(href="/tasks") ALL TASKS
          %li{class: ('active' if @status == "not_yet")}
            %a(href="/tasks?status=not_yet") NOT YET
          %li{class: ('active' if @status == "pending")}
            %a(href="/tasks?status=pending") PENDING
          %li{class: ('active' if @status == "done")}
            %a(href="/tasks?status=done") DONE
      .container
      %h1 Todo Application

      %table.table.table-bordered.table-hover.table-striped
        %thead
          %tr
            %th ID
            %th Name
            %th Content
            %th Status
            %th Created Time
        %tbody
          - @tasks.each do |task|
            %tr
              %td= task.id
              %td= task.name
              %td= task.content
              %td= task.status_name
              %td= task.created_at.strftime('%Y/%m/%d %H:%M:%S')